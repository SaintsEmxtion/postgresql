psql
create database shop 
\c shop
shop=# create table customer( #создаём таблицу клиентов и ( заполняем поля в этой таблице
shop(# id serial primary key, #задаём поле id (serial primary key-делаем это поле уникальным)
shop(# name varchar(255), #создаём поле name с максимальной длиной символов 255
shop(# phone varchar(30),
shop(# email varchar(255)
shop(# ); #закрывем нашу таблицу
CREATE TABLE
shop=# \d #просмотр таблиц
shop=# \d customer #просмотр полей таблицы customer

shop=# create table product( #создаём таблицу продукта
shop(# id serial primary key,
shop(# name varchar(255),
shop(# description text,
shop(# priсe integer);

shop=# create table product_photo #создаём таблицу фотографии продукта
shop-# id serial primary key,
shop-# url varchar(255),
shop-# product_id integer references product(id) #продукт id - целое число (integer) и также делаем ссылку на id product из предыдущей таблицы

shop=# create table cart( #создаём таблицу корзины
shop(# customer_id integer references customer(id),
shop(# id serial primary key);

shop=# create table cart_product( #создаём таблицу продукты в корзине
cart_id integer references cart(id),
product_id integer references product(id));

insert into customer(name,phone,email) values ('Петр', '111', '123@mail.ru'); #добавляем в таблицу клиентов имя клиента и т.д
select * from customer; #вывод данных клиентов с базы customer

select * from product_photo pp; #Назначение таблице product_photo алиаса pp











